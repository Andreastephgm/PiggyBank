<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdmActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="97dp">

        <TextView
            android:id="@+id/textView29"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcomeAdmin"
            android:fontFamily="@font/rubikbubblesregular"
            android:textSize="50sp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textColor="#91BE2F"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/addBankAdminButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:text="@string/add_bank"
            android:background="@drawable/gradientone"
            android:layout_gravity="center"
            android:textColor="#535B61"
            android:fontFamily="@font/rubikbubblesregular"
            android:textSize="20sp"
            android:layout_marginHorizontal="60dp"/>

        <Button
            android:id="@+id/bankListAdminButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:text="@string/list_bank"
            android:background="@drawable/gradientone"
            android:layout_gravity="center"
            android:textColor="#535B61"
            android:fontFamily="@font/rubikbubblesregular"
            android:textSize="20sp"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="30dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>